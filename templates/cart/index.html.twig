{% extends 'base.html.twig' %}

{% block title %}Hello Botme!{% endblock %}

{% block body %}
    <div class="container products">
        <div class="row">
            <table id="cart" class="table table-hover table-condensed">
                <thead>
                <tr>
                    <th style="width:50%">Product</th>
                    <th style="width:10%">Price</th>
                    <th style="width:8%">Quantity</th>
                    <th style="width:22%" class="text-center">Subtotal</th>
                    <th style="width:10%"></th>
                </tr>
                </thead>
                <tbody>
                {% for item in order_cart_items %}
                    <tr>
                        <td data-th="Product">
                            <div class="row">
                                <div class="col-sm-3 hidden-xs">
                                    <img src="{{ asset('images/3.png') }}"
                                         width="100"
                                         height="100"
                                         class="img-responsive"/>
                                </div>
                                <div class="col-sm-9">
                                    <h4 class="nomargin">{{ item.item.name }}</h4>
                                </div>
                            </div>
                        </td>
                        <td data-th="Price">${{ item.item.price }}</td>
                        <td data-th="Quantity">
                            <input type="number" value="{{ item.quantity }}" class="form-control quantity"/>
                        </td>
                        <td data-th="Subtotal" class="text-center">${{ item.item.price * item.quantity }}</td>
                        <td class="actions" data-th="">
                            <button class="btn btn-info btn-sm update-cart" data-id="{{ item.id }}"><i
                                        class="fa fa-refresh"></i>
                            </button>
                            <button class="btn btn-danger btn-sm remove-from-cart" data-id="{{ item.id }}"><i
                                        class="fa fa-trash-o"></i>
                            </button>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
                <tfoot>
                <tr>
                    <td><a href="{{ path('home') }}" class="btn btn-warning"><i class="fa fa-angle-left"></i> Continue
                            Shopping</a>
                    </td>
                    <td colspan="2" class="hidden-xs"></td>
                    <td class="hidden-xs text-center"><strong>Total $ 0</strong></td>
                </tr>
                </tfoot>
            </table>
        </div><!-- End row -->
    </div>
{% endblock %}
